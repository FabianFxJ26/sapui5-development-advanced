<mvc:View controllerName="student01.com.sap.training.ux402.fullscreen.ux402fullscreen.controller.Flights"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:l="sap.ui.layout">
    <Page id="idflightsPage" 
    navButtonPress="onNavBack" showNavButton="true" title="{Carrname}">
        <content>
            <l:VerticalLayout id="idVerticalLayout">
                <ObjectHeader id="idObjectHeader" title="{Carrname}" number="" numberUnit="{Currcode}" titleHref="{Url}">
                    <attributes>
                        <ObjectAttribute id="idCarridObjectAttribute" text="{Carrid}"/>
                        <ObjectAttribute id="idUrlObjectAttribute" text="{Url}"/>
                    </attributes>
                </ObjectHeader>
            </l:VerticalLayout>
            <Table id="idToFlightsTable" 
            items="{path: 'to_Flight',sorter:{path:'Carrid'}}"
            mode="SingleSelectMaster" 
            growing="true" 
            growingThreshold="10">
                <headerToolbar>
                    <Toolbar id="idToolbar">
                        <Title id="idFlightsTitle" text="Flights" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="idCarrierColumn">
                        <Text id="idNameText" text="{i18n>carriername}"/>
                    </Column>
                    <Column id="idFlightDateColumn">
                        <Text id="idFlightDateText" text="{i18n>flightdate}"/>
                    </Column>
                    <Column id="idSeatMaxColumn">
                        <Text id="idSeatMaxText" text="{i18n>seatmax}"/>
                    </Column>
                    <Column id="idSeatOccColumn">
                        <Text id="idSeatOccText" text="{i18n>seatocc}"/>
                    </Column>
                </columns>
                    <items>
                    <ColumnListItem id="idColumnListItem">
                    <cells>
                    <ObjectIdentifier title="{Carrid}" text="{Carrid}"/>
                    <Text id="idFldateText" text="{path: 'Fldate', type: 'sap.ui.model.type.Date'}" />
                    <Text id="idSeatsmaxText" text="{Seatsmax}" />
                    <Text id="idSeatsoccText" text="{Seatsocc}" />
                    </cells>
                    </ColumnListItem>
                    </items>
            </Table>
        </content>
    </Page>
</mvc:View>